import subprocess

# Specify the URL of the GitHub repository you want to clone
repo_url = "https://github.com/username/repo-name.git"  # Replace with your repository URL

# Specify the directory where you want to clone the repository
destination_dir = "/path/to/destination"  # Replace with your desired destination directory

# Run the git clone command
try:
    subprocess.check_output(["git", "clone", repo_url, destination_dir])
    print(f"Repository cloned to {destination_dir}")
except subprocess.CalledProcessError as e:
    print(f"Error cloning repository: {e}")
